<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RolController</servlet-name>
        <servlet-class>com.steep.controller.RolController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarritoController</servlet-name>
        <servlet-class>com.steep.controller.CarritoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PagoController</servlet-name>
        <servlet-class>com.steep.controller.PagoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VentaController</servlet-name>
        <servlet-class>com.steep.controller.VentaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetalleVentaController</servlet-name>
        <servlet-class>com.steep.controller.DetalleVentaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RolController</servlet-name>
        <url-pattern>/RolController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarritoController</servlet-name>
        <url-pattern>/CarritoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PagoController</servlet-name>
        <url-pattern>/PagoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VentaController</servlet-name>
        <url-pattern>/VentaController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetalleVentaController</servlet-name>
        <url-pattern>/DetalleVentaController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
